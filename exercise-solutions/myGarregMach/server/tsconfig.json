{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "../config.json"],
  "exclude": ["node_modules"]
}
